<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.captechventures.examples.espresso_recording"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ColorsActivity"
            android:label="@string/title_activity_colors"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.captechventures.examples.espresso_recording.MainActivity"/>
        </activity>
        <activity
            android:name=".core_values.CoreValuesActivity"
            android:label="@string/title_activity_core_values"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.captechventures.examples.espresso_recording.MainActivity"/>
        </activity>
        <activity
            android:name=".ComponentsActivity"
            android:label="@string/title_activity_components"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.captechventures.examples.espresso_recording.MainActivity"/>
        </activity>
        <activity
            android:name=".AssetsActivity"
            android:label="@string/title_activity_assets"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.captechventures.examples.espresso_recording.MainActivity"/>
        </activity>
    </application>
</manifest>