<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/content_assets"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.captechventures.examples.espresso_recording.AssetsActivity"
    tools:showIn="@layout/activity_assets">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <com.captechventures.examples.espresso_recording.ui.font.FontableTextView
            style="@style/Text.Body"
            android:text="CapTech Logo - Full Color"/>

        <ImageView
            style="@style/Image.Logo"
            android:src="@drawable/ic_logo_captech_default"/>

        <com.captechventures.examples.espresso_recording.ui.font.FontableTextView
            style="@style/Text.Body"
            android:text="CapTech Logo - Black"/>

        <ImageView
            style="@style/Image.Logo"
            android:src="@drawable/ic_logo_captech_black"/>

        <com.captechventures.examples.espresso_recording.ui.font.FontableTextView
            style="@style/Text.Body"
            android:text="CapTech Logo - Gray"/>

        <ImageView
            style="@style/Image.Logo"
            android:src="@drawable/ic_logo_captech_gray"/>

        <com.captechventures.examples.espresso_recording.ui.font.FontableTextView
            style="@style/Text.Body"
            android:text="CapTech Logo - White"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">

            <ImageView
                style="@style/Image.Logo"
                android:src="@drawable/ic_logo_captech_white"/>
        </FrameLayout>

        <com.captechventures.examples.espresso_recording.ui.font.FontableTextView
            style="@style/Text.Body"
            android:text="CapTech Logo With Vertical Tagline - Full Color"/>

        <ImageView
            style="@style/Image.Logo"
            android:src="@drawable/ic_logo_captech_with_tagline_vert_default"/>

        <com.captechventures.examples.espresso_recording.ui.font.FontableTextView
            style="@style/Text.Body"
            android:text="CapTech Logo With Vertical Tagline - Black"/>

        <ImageView
            style="@style/Image.Logo"
            android:src="@drawable/ic_logo_captech_with_tagline_vert_black"/>

        <com.captechventures.examples.espresso_recording.ui.font.FontableTextView
            style="@style/Text.Body"
            android:text="CapTech Logo With Vertical Tagline - Gray"/>

        <ImageView
            style="@style/Image.Logo"
            android:src="@drawable/ic_logo_captech_with_tagline_vert_gray"/>

        <com.captechventures.examples.espresso_recording.ui.font.FontableTextView
            style="@style/Text.Body"
            android:text="CapTech Logo With Vertical Tagline - White"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">

            <ImageView
                style="@style/Image.Logo"
                android:src="@drawable/ic_logo_captech_with_tagline_vert_white"/>
        </FrameLayout>
    </LinearLayout>
</ScrollView>
